@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="csrf-token" content="BV1vphfoIulx4sw7obuEVpoSDrciqdp3EQDnl6Gc">
    <title>Cateen Login</title>
    <!-- Fav Icon -->
    <link rel="icon" type="text/css" href="~/login.ico">
    <!-- Fonts Awesome -->
    <link rel="stylesheet" type="text/css" href="css/all.min.css">
    <!-- Main Style -->
    <link rel="stylesheet" type="text/css" href="~/css/login_style.css">
    <link rel="stylesheet" type="text/css" href="~/css/all.min.css" />
    
    <script> var site_url = "https://lotteryscreen.app"; </script>
</head>

<body class="login_panel">
    <section class="login_wrap bg-white">
        <div class="row no-gutters min-vh-100">

            <div class="col-lg-5 d-none d-lg-block bg-primary">
                <div id="login_slider" class="login_slider">
                    <div class="h-lg-100 login-box">
                        <div class="login_slider_box">
                            <div class="text-center pb-5">
                                <img class="d-inline-block mw-100" src="~/fonts/lottery-display.svg">
                            </div>
                            <div class="h3 text-light text-center pl-3 pr-3">Cateen webapp for user to order food more convenient</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 d-flex align-items-center justify-content-center">
                <div class="login_box">
                    <div class="w-300 w-lg-350">
                        <div class="d-block pb-2">
					        <a href="">
					            <img src="/logo.png" style="width:100%" alt="logo">
					        </a>
				        </div>
                        <h3 class="text-dark mt-5">
                            Sign in to your account
                        </h3>
                        <div class="text-danger" id="msgAlert">@ViewBag.Message</div>
                        <form class="mt-4" method="post" asp-action="Index">
                            <input type="hidden" name="_token">					
                            <div class="form-group">
                                <label for="username" class="text-dark">Username</label>
                                <input type="text" name="username" id="username" placeholder="Username" class="form-control " required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="password" class="text-dark">Password</label>
                                <input type="password" name="password" id="password" placeholder="Password" class="form-control ">
                                <div class="show_input_field">
                                    <div class="checkbox_btn btn-group-toggle" data-toggle="buttons">
                                        <label class="btn btn-outline-secondary">
                                            <input id="show_pass" type="checkbox"> <i class="fas fa-eye"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                   
                                </div>

                                <div class="col-6">
                                    <a asp-action="Forgot" class="d-block text-right">
                                        Reset Password?
                                    </a>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block mt-4">Sign in</button>

                            <div class="text-secondary font-size-lg mt-5 text-center">
                                Need a account?
                                <a asp-action="Register">Create an account</a><!-- onboard_pricing -->
                                <!-- https://lotterydisplay.com/request-a-quote/ -->
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- START FOOTER SCRIPT  -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <!--  END FOOTER SCRIPT -->
    <script>
        jQuery(document).ready(function () {
                jQuery('#login_slider').removeClass("opacity-0");
                jQuery('body').on('click', '#show_pass', function () {
                        var x = document.getElementById("password");
                        if (x.type === "password") {
                                x.type = "text";
                        }
                        else {
                                x.type = "password";
                        }
                });
        });
    </script>


    <!-- ====================== -->
    <!--  SPECIFIC PAGE SCRIPT  -->
    <!-- ====================== -->
    <script>
        $(function(){

             setTimeout(() => {
            $("#msgAlert").fadeOut('slow');
        }, 2000);

        });
    </script>
    <!-- ====================== -->
    <!--  SPECIFIC PAGE SCRIPT  -->
    <!-- ====================== -->






</body>
</html>