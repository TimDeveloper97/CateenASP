@using Model
@model List<Order>

<div class="row" style="margin-top: 40px;">
    <h3>Your order</h3>
    @if(Model != null){
        foreach(var item in Model)
    {
        <div class="col-md-4">
               <div class="card order-item">
                <h4>@item.Food.MealTime.ToString()</h4>
                <h5>@item.Food.Name</h5>
                <a href="#" class="btn btn-danger">Cancel order</a>
               </div>
            </div>
        }
    }
    else
    {
        <h4>You don't have any order, order now!</h4>
    }

</div>