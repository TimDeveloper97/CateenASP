                jQuery(document).ready(function () {
                        jQuery('#login_slider').removeClass("opacity-0");
                        jQuery('body').on('click', '#show_pass', function () {
                                var x = document.getElementById("password");
                                if (x.type === "password") {
                                        x.type = "text";
                                }
                                else {
                                        x.type = "password";
                                }
                        });
                });
        </script>


